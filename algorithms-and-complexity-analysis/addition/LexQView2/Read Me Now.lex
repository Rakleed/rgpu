 2    LineNumbers.Background.Color=Window
 1    # Цвет шрифта для номеров строк, задается точно так же
 2    LineNumbers.Font.Color=WindowText

 1    # Масштаб по умолчанию
 2    Scale=100

 1    # Антиалиазинг (уменьшение зубцов при масштабировании).
 1    # Возможны три значения:
